{% extends "base.html.twig" %}

{% block title %}
	Register
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<link href="/styles/user.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="RegForm">
		{{form_start(register)}}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{label}}">
					{{message|raw}}
				</div>
			{% endfor %}
		{% endfor %}
		{{form_row(register.username)}}
		{{form_row(register.password.first)}}
		{{form_row(register.password.second)}}
		{{form_row(register.email)}}
		{{form_row(register.name)}}
		{{form_widget(register.submit)}}
		{{form_end(register)}}
		<a href="{{path('login')}}">You have account already?</a>
	</div>
{% endblock %}
